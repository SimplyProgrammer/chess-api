package org.ugp.api.chess.enginev2;

public class Rook extends ChessPiece {
	public Rook(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "r", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int x, int yPosition) {
		if (super.canMoveTo(x,yPosition)) {
			return rookMovement(x, yPosition);
		}
		return false;
	}
	
	
	protected boolean rookMovement(int x, int yPosition) {
		return isMovingStraight(x, yPosition);
	}
}