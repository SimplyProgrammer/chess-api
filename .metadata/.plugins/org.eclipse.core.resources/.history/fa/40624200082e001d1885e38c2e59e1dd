package org.ugp.api.chess.enginev2;

public class SimpleChessEngine {
	protected ChessPiece[][] chessBoard;
	
	public SimpleChessEngine(int width, int height) {
		chessBoard = new ChessPiece[width][height];
	}
	
	public boolean isEmpty(int x, int y) {
		return isInBounds(x, y) && chessBoard[x][y] == null;
	}
	
	public boolean isInBounds(int x, int y) {
		return x < getWidth() && x >= 0 &&
			   y < getHeight() && y >= 0;
	}
	
	public ChessPiece pieceAt(int x, int y) {
		return isInBounds(x, y) ? chessBoard[x][y] : null; 
	}
	
	@Override
	public String toString() {
		String str = "";
		for (int x = 0; x < chessBoard.length; x++) {
			for (int y = 0; y < chessBoard[x].length; y++) {
				ChessPiece piece = chessBoard[x][y];
				str += piece == null ? '#' : piece;
			}
			str += "\n";
		}
		return str;
	}
	
	public int getWidth() {
		return chessBoard[0].length;
	}
	
	public int getHeight() {
		return chessBoard.length;
	}
	
	public ChessPiece[][] getChessBoard() {
		return chessBoard;
	}

	public void removeFromBoard(ChessPiece removePiece) {
		chessBoard[removePiece.getX()][removePiece.getY()] = null;
	}

	public void placePiece(ChessPiece chessPiece, int x, int y) {
		if (isInBounds(x, y))
			chessBoard[x][y] = chessPiece;
	}
}
