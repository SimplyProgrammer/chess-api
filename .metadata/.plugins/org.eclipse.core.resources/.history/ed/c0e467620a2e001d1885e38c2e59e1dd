package org.ugp.api.chess.enginev2;

public class Rook extends ChessPiece {
	public Rook(SimpleChessEngine board, int color, int x, int y) {
		super(board, "r", color, x, y);
	}
	
	public boolean canMoveTo(int x, int y) {
		if (super.canMoveTo(x,y)) {
			return rookMovement(x, y);
		}
		return false;
	}
	
	
	protected boolean rookMovement(int x, int y) {
		return isMovingStraight(x, y);
	}
}