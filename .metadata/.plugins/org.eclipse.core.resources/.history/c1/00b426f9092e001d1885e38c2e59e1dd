package org.ugp.api.chess.enginev2;

public class Queen extends ChessPiece{
	public Queen(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "q", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int x, int y) {
		if (super.canMoveTo(x,y)) {
			return queenMovement(x, y);
		}
		return false;
	}
	
	
	protected boolean queenMovement(int x, int y) {
		if (isMovingStraight(x, y) ||
				isMovingDiagonal(x, y))
				return true;
		return false;
	}
}
