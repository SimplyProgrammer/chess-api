package org.ugp.api.chess.enginev2;


public class Bishop extends ChessPiece{
	public Bishop(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "b", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int x, int yPosition) {
		if (super.canMoveTo(x,yPosition)) {
			return bishopMovement(x, yPosition);
		}
		return false;
	}
	
	
	protected boolean bishopMovement(int x, int yPosition) {
		return isMovingDiagonal(x, yPosition);
	}
}