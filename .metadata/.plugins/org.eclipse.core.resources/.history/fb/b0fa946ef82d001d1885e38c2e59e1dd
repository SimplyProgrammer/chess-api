package org.ugp.api.chess.engine;

public class SimpleChessEngine 
{
	public final ChessPiece PAWN = new ChessPiece() {
		
		@Override
		public int[] getMovmentMetrix() {
			return new int[] {
				0, 0, 0,
				0, 0, 0,
				0, 1, 0
			};
		}
	};
	
	public final ChessPiece ROOK = new ChessPiece() {
		
		@Override
		public int[] getMovmentMetrix() {
			return new int[] {
				0, 2, 0,
				2, 0, 2,
				0, 2, 0
			};
		}
	};
	
	public final ChessPiece Queen = new ChessPiece() {
		
		@Override
		public int[] getMovmentMetrix() {
			return new int[] {
				0, 0, 0,
				0, 0, 0,
				0, 1, 0
			};
		}
	};
	
	public final ChessPiece PAWN = new ChessPiece() {
		
		@Override
		public int[] getMovmentMetrix() {
			return new int[] {
				0, 0, 0,
				0, 0, 0,
				0, 1, 0
			};
		}
	};
	
	public final ChessPiece PAWN = new ChessPiece() {
		
		@Override
		public int[] getMovmentMetrix() {
			return new int[] {
				0, 0, 0,
				0, 0, 0,
				0, 1, 0
			};
		}
