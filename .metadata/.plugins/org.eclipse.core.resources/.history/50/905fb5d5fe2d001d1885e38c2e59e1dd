package org.ugp.api.chess.engine;

import java.util.Iterator;

public class SimpleChessEngine 
{
	protected ChessPiece[][] pieces = {
		{new Rook(0), new Knight(0), new Bishop(0), new Queen(0), new King(0), new Bishop(0), new Knight(0), new Rook(0)},
		{new Pawn(0), new Pawn(0), new Pawn(0), new Pawn(0), new Pawn(0), new Pawn(0), new Pawn(0), new Pawn(0)},
		new ChessPiece[8],
		new ChessPiece[8],
		new ChessPiece[8],
		new ChessPiece[8],
		{new Pawn(1), new Pawn(1), new Pawn(1), new Pawn(1), new Pawn(1), new Pawn(1), new Pawn(1), new Pawn(1)},
		{new Rook(1), new Knight(1), new Bishop(1), new Queen(1), new King(1), new Bishop(1), new Knight(1), new Rook(1)},
	};
	
	public ChessPiece getNeighbour(int x, int y, int ofX, int ofY) {
		try {
			this.pieces[x+ofX][y+ofY];
		} catch (Exception e) {
			return null;
		}
	}
	
	public int[][] movmentMetrixFor(int px, int py) {
//		ChessPiece piece = this.pieces[px][py];
//		if (piece == null)
//			return null;
//		
//		int[][] movmentMetrix = piece.getMovmentMetrix();
//		for (int x = 0; x < movmentMetrix.length; x++) {
//			for (int y = 0; y < movmentMetrix[x].length; y++) {
//				
//			}
//		}
	}
	
	@Override
	public String toString() {
		String str = "";
		for (int x = 0; x < pieces.length; x++) {
			for (int y = 0; y < pieces[x].length; y++) {
				ChessPiece piece = pieces[x][y];
				str += piece == null ? '#' : piece;
			}
			str += "\n";
		}
		return str;
	}
}
