package org.ugp.api.chess.enginev2;

public class Pawn extends ChessPiece{
	
	public Pawn(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "p", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int xPosition, int yPosition) {
		if (super.canMoveTo(xPosition,yPosition)) {
			return pawnMovement(xPosition, yPosition);
		}
		return false;
	}
	
	
	protected boolean pawnMovement(int xPosition, int yPosition) {
		int one_step;
		int two_step;
		ChessPiece target = chessBoard.pieceAt(xPosition, yPosition);
		
		if (this.getColor() == BLACK) {
			one_step = 1;
			two_step = 2;
		}
		else{
			one_step = -1;
			two_step = -2;
		}
		
		
		if (xPosition - this.getX() == one_step) {
			
			if (yPosition == this.getY() && target == null) {
				return true;
			}
			
			if (Math.abs(this.getY() - yPosition) == 1 && target != null) {
				return true;
			}
		}
		
		else if (!hasMoved) {
			if (xPosition - this.getX() == two_step) {
				if (yPosition == this.getY() && target == null) {
					return true;
				}
			}
		}

		return false;
	}
}
