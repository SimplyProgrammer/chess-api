package org.ugp.api.chess.engine;


public abstract class ChessPiece implements Cloneable
{
	protected int color; 
	protected String type;
	
	public ChessPiece() {
		this(0);
	}
	
	public ChessPiece(int color) {
		this(color, "P");
	}
	
	public ChessPiece(int color, String type) {
		this.color = color;
		this.type = type;
	}
	
	public Object clone(int color)  {
		return new ChessPiece(color, type) {
			@Override
			public int[][] getMovmentMetrix() {
				return this.getMovmentMetrix();
			}
		};
	}
	
	@Override
	public Object clone() {
		return new ChessPiece(color, type) {
			@Override
			public int[][] getMovmentMetrix() {
				return this.getMovmentMetrix();
			}
		};
	}
	
	public abstract int[][] getMovmentMetrix();
	
	public int getColor() {
		return color;
	}
	
	public void setColor(int color) {
		this.color = color;
	}
	
	public String getType() {
		return type;
	}
	
	public void setType(String type) {
		this.type = type;
	}
}
