package org.ugp.api.chess.enginev2;

public class Knight extends ChessPiece{
	public Knight(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "n", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int x, int y) {
		if (!super.canMoveTo(x,y)) 
			return false;
		
		if (Math.abs(this.getX() - x) == 2 && Math.abs(this.getY() - y) == 1)
			return true;
		if (Math.abs(this.getX() - x) == 1 && Math.abs(this.getY() - y) == 2)
			return true;
		return false;
	}
}
