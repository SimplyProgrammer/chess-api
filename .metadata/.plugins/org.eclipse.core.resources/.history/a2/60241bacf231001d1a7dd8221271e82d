package org.ugp.api.chess.enginev2;

public class King extends ChessPiece
{
	public King(SimpleChessEngine board, int color, int x, int y) {
		super(board, "k", color, x, y);
	}
	
	@Override
	public boolean canMoveTo(int x, int y) {
		return super.canMoveTo(x, y) && distanceTo(x, y) == 1 && !isThreatenedWithoutMe(x, y);
	}
	
	public boolean isThreatenedWithoutMe(int x, int y) {
		myBoard.remove(this);
		boolean isTileThreatened = myBoard.isThreatened(x, y);
		myBoard.put(this);
		return isTileThreatened;
	}
}
