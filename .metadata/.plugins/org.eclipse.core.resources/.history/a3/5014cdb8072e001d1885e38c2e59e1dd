package org.ugp.api.chess.enginev2;


public class Bishop extends ChessPiece{
	public Bishop(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "b", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int xPosition, int yPosition) {
		if (super.canMoveTo(xPosition,yPosition)) {
			return bishopMovement(xPosition, yPosition);
		}
		return false;
	}
	
	
	protected boolean bishopMovement(int xPosition, int yPosition) {
		return isMovingDiagonal(xPosition, yPosition);
	}
}