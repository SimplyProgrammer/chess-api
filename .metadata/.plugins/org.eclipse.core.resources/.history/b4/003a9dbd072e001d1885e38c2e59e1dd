package org.ugp.api.chess.enginev2;

public class Queen extends ChessPiece{
	public Queen(SimpleChessEngine board, int color, int xLoc, int yLoc) {
		super(board, "q", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int x, int yPosition) {
		if (super.canMoveTo(x,yPosition)) {
			return queenMovement(x, yPosition);
		}
		return false;
	}
	
	
	protected boolean queenMovement(int x, int yPosition) {
		if (isMovingStraight(x, yPosition) ||
				isMovingDiagonal(x, yPosition))
				return true;
		return false;
	}
}
