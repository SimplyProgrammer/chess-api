package org.ugp.api.chess.enginev2;

public class King extends ChessPiece{
	public King(SimpleChessEngine board, int color, int xLoc, int yLoc){
		super(board, "K", color, xLoc, yLoc);
	}
	
	public boolean canMoveTo(int xPosition, int yPosition){
		if(canMoveGenerics(xPosition,yPosition)){
			return kingMovement(xPosition, yPosition);
		}
		return false;
	}
	
	
	private boolean kingMovement(int xPosition, int yPosition){
		int absoluteX = Math.abs(xPosition - this.getX());
		int absoluteY = Math.abs(yPosition - this.getY());
		
		if (absoluteX <= 1 && absoluteY <= 1){
			if (absoluteX == 0 && absoluteY == 0){
				return false;
			}
			return true;
		}
		return false;
	}
}
